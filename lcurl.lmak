--工程名字
PROJECT_NAME = "lcurl"

--目标名字
TARGET_NAME = "lcurl"

--工程类型：static/dynamic/exe
PROJECT_TYPE = "dynamic"

--加载基础配置
require("share.lmak")

--需要的FLAGS
FLAGS = {
	"Wno-sign-compare"
}

--需要的include目录
INCLUDES = {
	"../lua/lua"
}

--需要连接的库文件
LIBS = {
	"lua",
	"curl"
}

--依赖项目
DEPS = {
	"lualib"
}